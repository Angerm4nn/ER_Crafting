<div class="card" style="cursor: pointer; height: 48px;" @onclick="HandleClick">
    <div class="card-body p-2 d-flex align-items-center h-100">
        @if (!string.IsNullOrEmpty(Component.Icon))
        {
            <img src="@Component.Icon" alt="@Component.Name" style="width: 48px; height: 48px;" />
        }
        <h5 class="mb-0 ms-2">@Component.Name</h5>
    </div>
</div>

@code {
    [Parameter] 
    public GameData GameData { get; set; } = null!;
    [Parameter]
    public ProductionComponent Component { get; set; } = null!;

    [Parameter]
    public EventCallback OnClick { get; set; }

    private async Task HandleClick()
    {
        await OnClick.InvokeAsync();
    }
}